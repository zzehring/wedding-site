---
import '../styles/global.css'; // Import global styles
import Countdown from '../components/Countdown.svelte';

// Helper to determine if a link is active for styling the nav
const currentPage = Astro.url.pathname;
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Our Wedding Website">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/vmfa-building-sketch.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{Astro.props.title || 'Krack Wedding'}</title>
	</head>
	<body>
		<header class="hero-section">
			<div class="hero-graphic">
				<img src="/vmfa-building-sketch.png" alt="Sketch of the VMFA building" class="hero-image" />
			</div>
			<h1 class="hero-names">Kristal & Zack</h1>
			<div class="hero-details">
				<p>APRIL 18, 2026 &bull; RICHMOND, VIRGINIA</p>
				<Countdown client:load targetDate="2026-04-18" />
			</div>
		</header>

		<!-- <nav>
			<a href="/" class:list={{ active: currentPage === '/' || currentPage === '/index.html' }}>Home</a>
			<a href="/details" class:list={{ active: currentPage === '/details/' }}>Details</a>
			<a href="/rsvp" class:list={{ active: currentPage === '/rsvp/' }}>RSVP</a>
			<a href="/registry" class:list={{ active: currentPage === '/registry/' }}>Registry</a>
			<a href="/photos" class:list={{ active: currentPage === '/photos/' }}>Photos</a>
			<a href="/table-finder" class:list={{ active: currentPage === '/table-finder/' }}>Seating Chart</a>
		</nav> -->
		<main>
			<slot />
		</main>
		<footer>
			<p>&copy; 2025 Krack</p>
		</footer>
	</body>
</html>

<style>
	/* Minimal reset for html, body handled in global.css */
	html,
	body {
		width: 100%;
		height: 100%; /* May not be strictly needed if body bg is set */
	}
	.hero-section {
		/* Container for the top graphic, names, and details */
	}
	.hero-graphic {
		text-align: center;
		padding: 2rem 0 0; /* Reduced bottom padding to 0 */
	}
	.hero-image {
		max-width: 100%;
		height: auto;
		max-height: 250px;
	}
	nav {
		display: flex;
		justify-content: center;
		gap: 1.5rem; 
		padding: 1rem 0; /* Reduced padding a bit from previous */
		background-color: transparent; 
		position: sticky; 
		top: 0;
		z-index: 10; 
	}
	nav a {
		text-decoration: none;
		color: #49745b; /* Unified text color */
		font-weight: 400; /* Regular weight for nav links */
		font-size: 0.9rem;
		padding: 0.25rem 0.1rem; /* Minimal padding, focus on underline */
		border-bottom: 2px solid transparent; /* Placeholder for active state */
		transition: border-color 0.3s ease, color 0.3s ease;
	}
	nav a.active {
		border-bottom-color: #49745b; /* Unified text color */
		font-weight: 600; /* Slightly bolder for active link */
	}
	nav a:not(.active):hover {
		color: #3a5c48; /* Darker shade for hover */
		border-bottom-color: #3a5c48; /* Darker shade for hover */
	}
	main {
		padding: 1.5rem;
		max-width: 960px; /* Common max-width for content readability */
		margin: 0 auto; /* Center the main content block */
	}
	footer {
		text-align: center;
		padding: 1.5rem 0;
		background-color: transparent; 
		color: #49745b; /* Unified text color */
		font-size: 0.9rem;
	}
	button {
		border-radius: 4px;
		font-size: 1rem;
		font-weight: 600;
		cursor: pointer;
		transition: background-color 0.3s ease;
	}
	button:hover {
		// ... existing code ...
	}

	.hero-names {
		font-family: 'Playwrite NG Modern', cursive;
	}
</style>
